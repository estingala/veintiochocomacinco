{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="header container">
    <div class="header-logo">
        <a href="{{@blog.url}}">
            <img src="{{asset "images/logo_black.svg"}}"/>
        </a>
    </div>

    <div class="header-social">
        <a href="https://www.facebook.com/veintiochocomacinco">
            <img src="{{asset "images/facebook.svg"}}" class="social-media-icon"/>
        </a>
        <a href="https://www.instagram.com/veintiochocomacinco/">
            <img src="{{asset "images/instagram.svg"}}" class="social-media-icon"/>
        </a>
        <a href="https://www.twitter.com/veintiochocomacinco/">
            <img src="{{asset "images/twitter.svg"}}" class="social-media-icon"/>
        </a>
        <a href="mailto:info@veintiochocomacinco.com">
            <img src="{{asset "images/mailing.svg"}}" class="social-media-icon"/>
        </a>
    </div>
</div>

<div class="container">
    <section class="top-main-gallery" data-type="gallery" data-speed="4">
        {{#foreach posts}}
            {{#if image}}
                <div class="top-main-gallery-item" href={{url}}>
                    <div class="top-main-gallery-item-photo" style="background-image: url({{image}})"></div>
                    <div class="top-main-gallery-item-title">
                        <a href="{{url}}">
                            <h2>{{title}}</h2>
                        </a>
                    </div>
                </div>
            {{/if}}
        {{/foreach}}
    </section>

    <section>
        <div class="row">
            {{#foreach posts from="1" to="2"}}
                <div class="col-md-6 trail-2">
                    <a href="{{url}}">
                        <div class="post-image">
                            <div class="post-image-content" style="background-image: url({{image}})"></div>
                        </div>
                        <div class="post-item-title">
                            <h4>{{title}}</h4>
                        </div>
                    </a>
                </div>
            {{/foreach}}
        </div>

        <div class="row">
            {{#foreach posts from="3" to="5"}}
                <div class="col-md-4 trail-2">
                    <a href="{{url}}">
                        <div class="post-image">
                            <div class="post-image-content" style="background-image: url({{image}})"></div>
                        </div>
                        <div class="post-item-title">
                            <h4>{{title}}</h4>
                        </div>
                    </a>
                </div>
            {{/foreach}}
        </div>
    </section>

    <section>
        {{pagination}}
    </section>
</div>