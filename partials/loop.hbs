{{! This is the post loop - each post will be output using this markup }}
<div class="container-fluid">
<div class="row">

{{#foreach posts}}
        <div class="col-md-4">
            <img src="{{image}}" class="img-responsive blog_post_item_bg"/>
            <div class="blog_post_item_content">
                <div class="blog_post_item_content_title"><a href="{{link}}" title="{{title}}">{{title}}</a></div>
            </div>
    </div>

{{/foreach}}
    </div>
    </div>

{{! Previous/next page links - displayed on every page }}
{{pagination}}
